<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.summerbrochtrup.myrestaurants.ui.FindRestaurantDetailFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/restaurantImageView"
                    android:src="@drawable/waffles"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/restaurantImageView"
                    android:layout_alignTop="@id/restaurantImageView"
                    android:padding="3dp">

                    <ImageView
                        android:id="@+id/websiteIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_exit_to_app_white_24dp"
                        android:paddingRight="7dp"/>

                    <ImageView
                        android:id="@+id/phoneIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_local_phone_white_24dp"
                        android:paddingRight="7dp"/>

                    <ImageView
                        android:id="@+id/addressIcon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_map_white_24dp"/>

                </LinearLayout>

                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/restaurantImageView"
                    android:layout_alignBottom="@id/restaurantImageView"
                    android:rating="4.5"
                    android:theme="@style/RatingBar"
                    style="@android:style/Widget.Material.Light.RatingBar.Indicator" />

            </RelativeLayout>

            <fragment
                android:id="@+id/map"
                android:layout_weight="1"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.summerbrochtrup.myrestaurants.ui.RestaurantDetailActivity" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restaurant Name"
                android:id="@+id/restaurantNameTextView"
                android:textSize="20sp"
                android:layout_gravity="left"
                android:textColor="@color/colorTextIcons"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brunch, American"
                android:layout_gravity="left"
                android:id="@+id/categoryTextView"
                android:textColor="@color/colorPrimaryLight"
                android:textStyle="italic" />
        </LinearLayout>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_height="70dp"
        android:layout_width="70dp"
        android:layout_margin="16dp"
        app:backgroundTint="@color/colorPrimary"
        android:src="@drawable/ic_favorite_white_24dp"
        android:layout_gravity="bottom|right"/>

</FrameLayout>